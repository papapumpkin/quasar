class Quasar < Formula
  desc "Dual-agent AI coding coordinator"
  homepage "https://github.com/papapumpkin/quasar"
  version "VERSION"
  license "MIT"

  on_macos do
    if Hardware::CPU.arm?
      url "https://github.com/papapumpkin/quasar/releases/download/vVERSION/quasar_VERSION_darwin_arm64.tar.gz"
      sha256 "SHA256_DARWIN_ARM64"
    else
      url "https://github.com/papapumpkin/quasar/releases/download/vVERSION/quasar_VERSION_darwin_amd64.tar.gz"
      sha256 "SHA256_DARWIN_AMD64"
    end
  end

  on_linux do
    if Hardware::CPU.intel?
      url "https://github.com/papapumpkin/quasar/releases/download/vVERSION/quasar_VERSION_linux_amd64.tar.gz"
      sha256 "SHA256_LINUX_AMD64"
    end
  end

  def install
    bin.install "quasar"
  end

  test do
    assert_match "quasar", shell_output("#{bin}/quasar version")
  end
end
